<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- Editable Task Title -->
    <EditText
        android:id="@+id/taskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <!-- Editable Task Notes -->
    <EditText
        android:id="@+id/taskNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Notes"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <!-- Editable Due Date (in MM/dd/yyyy format) -->
    <EditText
        android:id="@+id/taskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due Date (MM/dd/yyyy)"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/taskCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete?"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <!-- Button to set the notification time -->
    <Button
        android:id="@+id/btnSetNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Notification Time"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <!-- Save Button to save changes -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <!-- Back Button to go back to the previous screen -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Share Task"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="275dp"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/holo_orange_dark" />

</LinearLayout>
